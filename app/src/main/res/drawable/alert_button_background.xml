<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="230dp" android:height="230dp" />
                    <solid android:color="#66CDAA" />
                </shape>
            </item>

            <item android:top="7dp" android:bottom="7dp" android:left="7dp" android:right="7dp">
                <shape android:shape="oval">
                    <size android:width="230dp" android:height="230dp" />
                    <stroke android:width="4dp" android:color="@android:color/white" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="230dp" android:height="230dp" />
                    <solid android:color="#FF6464" />
                </shape>
            </item>

            <item android:top="7dp" android:bottom="7dp" android:left="7dp" android:right="7dp">
                <shape android:shape="oval">
                    <size android:width="230dp" android:height="230dp" />
                    <stroke android:width="4dp" android:color="@android:color/white" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>